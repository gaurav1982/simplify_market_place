entity Client {
    compName String,
    compAddress String,
    compWebsite String,
    compType CompType,
    compContactNo String,
    createdBy String,
    createdAt LocalDate,
    updatedBy String,
    updatedAt LocalDate

}

enum CompType {
	IT,
    Consultant,
    Hospital,
    MediaHouse
}
relationship OneToMany {
    Client to User {id}
}

entity Worker {
    name String,
    email String,
    phone Integer,
    description String,
    createdBy String,
    createdAt LocalDate,
    updatedBy String,
    updatedAt LocalDate
}

entity Resume {
    path String,
    filetype FileType,
    resumeTitle String,
    isDefault Boolean,
    createdBy String,
    createdAt LocalDate,
    updatedBy String,
    updatedAt LocalDate
}

enum FileType {
	PDF,
    DOC,
    PPT
}
relationship OneToMany {
    Worker to Resume {id}
}
entity JobPreference {
    hourlyRate Integer,
    dailyRate Integer,
    monthlyRate Integer,
    hourPerDay Integer,
    hourPerWeek Integer,
    engagementType EngagementType,
    locationType LocationType,
    createdBy String,
    createdAt LocalDate,
    updatedBy String,
    updatedAt LocalDate
}

enum EngagementType {
	FullTime,
    Consultant,
    Freelancer
}

enum LocationType {
	Worklocation,
    Homelocation
}

entity JobSpecificField {
 value String
}
relationship OneToMany {
    JobPreference to JobSpecificField {id},
}


relationship OneToMany {
    Worker to JobPreference {id}
}

relationship OneToMany {
    Category to JobPreference {id}
}

entity Location {
	country String,
    state String,
    city String
}

entity LocationPrefrence {
prefrenceOrder Integer
}

relationship OneToMany {
    Worker to LocationPrefrence {id}
}

relationship OneToMany {
    Client to Location {id}
}

entity Education {
    degreeName String,
    institute String,
    yearOfPassing Integer,
    marks Float,
    startDate LocalDate,
    endDate LocalDate,
    degreeType DegreeType,
    description String,
    createdBy String,
    createdAt LocalDate,
    updatedBy String,
    updatedAt LocalDate
}

enum DegreeType {
	HSC,
    Graduate,
    PostGraduate,
    Associate,
    Doctrol,
    Diploma
}

relationship OneToMany {
    Worker to Education {id}
}

entity Employment {
    jobTitle String,
    companyName String,
    startDate LocalDate,
    endDate LocalDate,
    lastSalary Integer,
    description String,
    createdBy String,
    createdAt LocalDate,
    updatedBy String,
    updatedAt LocalDate
}
relationship OneToMany {
    Worker to Employment {id}
}
relationship ManyToMany {
    Employment {id} to Location {id}
}

