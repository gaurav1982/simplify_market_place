

entity Category {
    categoryName CategoryType,
    isParent Boolean,
    isActive Boolean
    createdBy String,
    createdAt LocalDate,
    updatedBy String,
    updatedAt LocalDate

}
enum CategoryType{
	Driver
    Nurse
    
}
relationship OneToMany {
    Category to Category{parent}
}

entity Field {
    fieldName String,
    fieldLabel String,
    fieldType FieldType,
    isDeleted Boolean,
    createdBy String,
    createdAt LocalDate,
    updatedBy String,
    updatedAt LocalDate
}

enum FieldType {
	String
    Date
    Integer
    Rate
    Email
}

relationship ManyToMany {
    Field {category} to Category{field}
}

